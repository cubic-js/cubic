{
  "name": "cubic",
  "version": "3.0.1",
  "description": "ðŸ“¦ Fully Modular JavaScript App Platform.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/cubic-js/cubic"
  },
  "scripts": {
    "lint": "eslint --ignore-path .gitignore --ignore-pattern browser.js --ignore-pattern browser.js.map .",
    "test": "mocha --exit -s 60000 --timeout 60000 test/server.js test/client.js test/auth.js test/requests.js test/middleware.js test/exceptions.js",
    "release": "lerna exec --concurrency 1 -- npx --no-install semantic-release -e @kaptard/semantic-release-monorepo --no-ci"
  },
  "author": "Kaptard",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "chalk": "^2.4.1",
    "lodash": "^4.17.15",
    "mongodb": "^3.1.8",
    "rand-token": "^0.4.0"
  },
  "devDependencies": {
    "@kaptard/semantic-release-monorepo": "^1.0.2",
    "eslint": "^5.7.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "lerna": "^3.4.3",
    "mocha": "^5.2.0",
    "prettier": "^1.14.3",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.13.30",
    "typescript": "^3.3.3",
    "username": "^4.0.0",
    "webpack": "^4.28.4"
  },
  "release": {
    "monorepo": {
      "analyzeCommits": {
        "preset": "angular",
        "releaseRules": [
          {
            "type": "docs",
            "scope": "README",
            "release": "patch"
          },
          {
            "type": "breaking",
            "release": "major"
          },
          {
            "type": "major",
            "release": "major"
          }
        ],
        "parserOpts": {
          "noteKeywords": [
            "BREAKING CHANGE",
            "BREAKING CHANGES",
            "BREAKING"
          ]
        }
      }
    }
  }
}
