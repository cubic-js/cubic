{
  "name": "cubic",
  "version": "0.0.0-development",
  "description": "ðŸ“¦ Fully Modular JavaScript App Platform.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/nexus-devs/cubic"
  },
  "scripts": {
    "lint": "eslint --ignore-path .gitignore .",
    "test": "mocha --exit -s 60000 --timeout 60000 test/smoke/index.js",
    "release": "lerna exec --concurrency 1 -- npx --no-install semantic-release -e semantic-release-monorepo"
  },
  "author": "Kaptard",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^5.6.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "lerna": "^3.4.3",
    "mocha": "^5.2.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.9.17",
    "semantic-release-monorepo": "^6.1.1",
    "webpack": "^4.20.2"
  },
  "release": {
      "monorepo": {
        "analyzeCommits": {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "docs",
              "scope": "README",
              "release": "patch"
            },
            {
              "type": "breaking",
              "release": "major"
            },
            {
              "type": "major",
              "release": "major"
            }
          ],
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BREAKING"
            ]
          }
      }
    }
  }
}
